@model IEnumerable<Hurtownia.ViewModels.MostSpentMoneyModel>
@{
    ViewBag.Title = "Klienci, którzy wydali najwięcej w naszym sklepie";
    Layout = "~/Views/Shared/ManageLayout.cshtml";
}

<br />
<br/>
<h2><b style="color:red;font-size:18px;">Lista 10 klientów, którzy wydali najwięcej pieniędzy na zakupach</b></h2>
<br />



    <div class="table-responsive">
        <table class="table table-bordered table-striped table-striped-column">


            <tr style="padding:5px" >
                <th style="padding:10px;">
                    Imię i nazwisko
                </th>
                <th style="padding:10px;">
                    Ilość sprzedanych produktów
                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td style="padding:10px;" >
                        @Html.DisplayFor(modelItem => item.Name)
                        @Html.DisplayFor(modelItem => item.LastName)




                    </td>
                    <td style="padding:10px;" >


                        @Html.DisplayFor(modelItem => item.Price)
                    </td>

                </tr>
            }

        </table>

    </div>


<br />
<br />

<script type="text/javascript" src="engine1/jquery.js"></script>
<script type="text/javascript" src="engine1/script.js"></script>
@System.Web.Optimization.Scripts.Render("~/bundles/jquery")