@model IEnumerable<Hurtownia.Models.Product>

@{
    ViewBag.Title = "Produkty których brakuje";
    Layout = "~/Views/Shared/ManageLayout.cshtml";
}
<br />
<br />
<h2><b style="color:red;font-size:18px;">Produkty, których jest mniej niż 1000 sztuk na  magazynie</b></h2>

<br />
@using (Html.BeginForm("AddProductsQuantity", "Products"))
{
    <div id="wrapper">
        <table class="table table-bordered table-striped table-striped-column">


            <tr style="padding:5px" class="td info">

                <th style="padding:10px">
                    Nazwa
                </th>

                <th style="padding:10px">
                    Cena
                </th>
                <th style="padding:10px">
                    Dostępna ilość
                </th>

                <th style="padding:10px">
                    Zwiększ ilość
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="padding:10px">
                        @*@Html.EditorFor(modelItem => item.ProductName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(modelItem => item.ProductName, "", new { @class = "text-danger" })*@
                        <input type="text" class="form-control col-md-1" style="display:none;" min="0" value="@item.ProductName" name="item.ProductName">
                        @Html.DisplayFor(modelItem => item.ProductName)

                    </td>
                    <td style="padding:10px">
                        @Html.DisplayFor(modelItem => item.ProductPrice)
                    </td>
                    <td style="padding:10px">
                        @Html.DisplayFor(modelItem => item.MaxQuantity)


                    </td>
                    <td style="padding:10px">
                        @*<input type="number" style="max-width:50px" min="0" value="@item.Quantity" name="Quantity">*@
                        @*@Html.DisplayFor(modelItem => item.Quantity)*@
                        @Html.EditorFor(modelItem => item.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(modelItem => item.Quantity, "", new { @class = "text-danger" })
                    </td>
                </tr>
            }
        </table>
    </div>
    <input class="btn btn-info" style="max-width:120px;margin-right:0px;" type="submit" value="Zapisz zmiany" />
}
<br />
