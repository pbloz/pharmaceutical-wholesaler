@*@Model Hurtownia.Models.Product*@
@{
    ViewBag.Title = "About";
}

<p>Porównaj Produkty</p><br />

@*<p>Nazwy Produktow </p><br />*@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">

        <div class="col-md-10">

            @foreach (var item in (List<Hurtownia.Models.Product>)ViewData["Products"])
            {


                <input type="checkbox" name="SelectedProducts" value="@item.ProductId"><span>   </span>@item.ProductName
                <br/>
            }



        </div>
    </div>







    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Porównaj" class="btn btn-default" />
        </div>
    </div>

}

